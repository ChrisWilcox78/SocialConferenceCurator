	<groupId>com.normativeanimal.socialconferencecurator</groupId>
	<artifactId>social-conference-curator</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>jar</packaging>

	<name>social-conference-curator</name>
	<url>http://maven.apache.org</url>

	<properties>
